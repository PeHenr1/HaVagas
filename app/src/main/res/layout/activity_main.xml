<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/havagas"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/nome"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/editTextNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <CheckBox
            android:id="@+id/checkBoxReceberEmails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receber_emails"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editTextTelefone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:hint="@string/telefone"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/checkBoxReceberEmails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
            android:id="@+id/spinnerTipoTelefone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:entries="@array/tipo_telefone"
            app:layout_constraintTop_toBottomOf="@id/editTextTelefone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <CheckBox
            android:id="@+id/checkBoxAdicionarCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_celular"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerTipoTelefone"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editTextCelular"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/celular"
            android:inputType="phone"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/checkBoxAdicionarCelular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/labelSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sexo"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editTextCelular"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/spinnerSexo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:entries="@array/sexo"
            app:layout_constraintTop_toBottomOf="@id/labelSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextSexoOutro"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/outro_sexo"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/spinnerSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextDataNascimento"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:hint="@string/data_de_nascimento"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/editTextSexoOutro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/labelFormacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formacao_academica"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editTextDataNascimento"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/spinnerFormacao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:entries="@array/formacao"
            app:layout_constraintTop_toBottomOf="@id/labelFormacao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextAnoConclusao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/ano_conclusao"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/spinnerFormacao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextInstituicao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/instituicao"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/editTextAnoConclusao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextTituloMonografia"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/titulo_monografia"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/editTextInstituicao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextOrientador"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="@string/orientador"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/editTextTituloMonografia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/labelVagas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vagas_interesse"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editTextOrientador"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editTextVagasInteresse"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:hint="@string/vagas_interesse"
            android:inputType="textMultiLine"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelVagas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layoutBotoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/editTextVagasInteresse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/salvar"/>

            <Button
                android:id="@+id/buttonLimpar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/limpar"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
